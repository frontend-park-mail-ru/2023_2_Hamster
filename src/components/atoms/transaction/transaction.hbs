<div class="transaction" id="{{id}}">
    <div class="transaction__card {{#unless owner}} transaction_hoverable {{/unless}}>" id="{{cardId}}">
        <div class="transaction__date-details">
                <span class="transaction__date font-base-text">
                    {{date}}
                </span>
            <span class="transaction__day-of-week font-caption">
                {{dayOfWeek}}
            </span>
        </div>
        <div class="transaction__icon">
            {{{icon}}}
        </div>
        <div class="transaction__category-info">
            <div class="transaction__category">
                <h4 class="font-h4-medium">{{transactionName}}</h4>
            </div>
            {{#if transactionPlace}}
                <div class="transaction__additional">
                    <div class="transaction__additional-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 13C13.6569 13 15 11.6569 15 10C15 8.34315 13.6569 7 12 7C10.3431 7 9 8.34315 9 10C9 11.6569 10.3431 13 12 13Z"
                                  stroke="#B1B3B6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M12 22C16 18 20 14.4183 20 10C20 5.58172 16.4183 2 12 2C7.58172 2 4 5.58172 4 10C4 14.4183 8 18 12 22Z"
                                  stroke="#B1B3B6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <span class="font-caption">{{transactionPlace}}</span>
                </div>
            {{/if}}
            {{#if transactionMessage}}
                <div class="transaction__additional">
                    <div class="transaction__additional-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 7.8C3 6.11984 3 5.27976 3.32698 4.63803C3.6146 4.07354 4.07354 3.6146 4.63803 3.32698C5.27976 3 6.11984 3 7.8 3H16.2C17.8802 3 18.7202 3 19.362 3.32698C19.9265 3.6146 20.3854 4.07354 20.673 4.63803C21 5.27976 21 6.11984 21 7.8V13.2C21 14.8802 21 15.7202 20.673 16.362C20.3854 16.9265 19.9265 17.3854 19.362 17.673C18.7202 18 17.8802 18 16.2 18H9.68375C9.0597 18 8.74767 18 8.44921 18.0613C8.18443 18.1156 7.9282 18.2055 7.68749 18.3285C7.41617 18.4671 7.17252 18.662 6.68521 19.0518L4.29976 20.9602C3.88367 21.2931 3.67563 21.4595 3.50054 21.4597C3.34827 21.4599 3.20422 21.3906 3.10923 21.2716C3 21.1348 3 20.8684 3 20.3355V7.8Z"
                                  stroke="#B1B3B6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <span class="font-caption">{{transactionMessage}}</span>
                </div>
            {{/if}}
        </div>
        <div class="transaction__value">
            <span class="font-base-text">
                {{value}} руб.
            </span>
        </div>
        <div class="transaction__account">
            <span class="font-base-text transaction__account-name">
                {{account}}
            </span>
            {{#if owner}}
                <span class="font-caption transaction__account-owner">
                    Владелец: {{owner}}
                </span>
            {{/if}}
        </div>
    </div>
    {{#if settingsOpen}}
        <div class="transaction__settings">
            <div class="transaction__settings-column">
                <div>
                    <span class="font-caption">Когда была транзакция?</span>
                    {{{dateInput}}}
                </div>
                {{{payer}}}
                {{{tagInput}}}
            </div>
            <div class="transaction__settings-column">
                {{{sumInput}}}
                {{{description}}}
                {{{accountInput}}}
            </div>
            <div class="transaction__settings-column">
                <div>
                    {{{button}}}
                </div>
                <div>
                    {{{delete}}}
                </div>
            </div>
        </div>
    {{/if}}
</div>
