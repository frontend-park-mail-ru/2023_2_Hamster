<div class="chosen-icon chosen-icon_size" id="{{openId}}">
    <svg class="icon icon_big icon_" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        {{{preview}}}
    </svg>
</div>
<div class="modal" id="{{id}}">
    <div class="modal__content">
        <h2 class="modal__header font-h2-medium">Выберите иконку</h2>
        <div class="modal__icons">
            {{#each icons}}
                <div class="modal__icon" id="{{iconId}}">
                    <svg class="modal__icon icon icon_big" id="{{id}}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        {{{path}}}
                    </svg>
                </div>
            {{/each}}
        </div>
        <div>
            {{{closeButton}}}
        </div>
    </div>
</div>
